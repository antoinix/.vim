    augroup mine | autocmd VimEnter * silent :!rm ~/.viminf*.tmp
endif

"== clear strange 'selected'
if !empty(glob('$PWD/selected'))
    augroup mine | autocmd VimEnter * silent :!rm $PWD/selected
endif


