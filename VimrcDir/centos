    if empty(glob('~/.vim/plugged'))
        augroup mine | autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
    endif
endif


" ===
" === Clear Junk Files
" ===
"== clear fucking .viminf*.tmp files
