" ===
" === File Header
" ===
func FileHeader()

  if &filetype == 'sh'
    call setline(1,'#! /bin/bash')
  endif

  if &filetype == 'python'
    call setline(1,"'''<++>'''")
  endif

  if &filetype == 'perl'
      call setline(1, '#! /usr/bin/perl')
  endif

endfunc
autocmd BufNewFile * exec ":call FileHeader()"


