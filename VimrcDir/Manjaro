" ===
" === CompileRunGcc
" ===
map <F5> :call CompileRunGcc()<CR>
func! CompileRunGcc()
  exec 'w'
  if &filetype ==# 'sh'
    silent! exec '!clear'
    :!time bash %
  elseif &filetype ==# 'c'
    silent! exec '!clear'
    exec '!g++ % -o %<'
    exec '!time ./%<'
  elseif &filetype ==# 'cpp'
    silent! exec '!clear'
    exec '!g++ % -o %<'
    exec '!time ./%<'
  elseif &filetype ==# 'python'
    silent! exec '!clear'
    exec '!time python3 %'
  elseif &filetype ==# 'html'
    exec '!chromium % &'
  elseif &filetype ==# 'markdown'
    exec 'MarkdownPreview'
  elseif &filetype ==# 'vimwiki'
    exec 'MarkdownPreview'
  elseif &filetype ==# 'tex'
    exec 'LLPStartPreview'
  endif
endfunc


