      \'asm': [],
      \'c': ['gcc'],
      \'vimwiki': [],
      \'cpp': ['gcc'],
      \'vim': ['vint'],
      \'awk': ['gawk'],
      \'css': ['prettier'],
      \'sh': ['shellcheck'],
      \'python': ['pylint'],
      \'xhtml': ['proselint'],
      \'html': ['proselint','prettier'],
      \}
